<div class="row">
  <div class="col-12 col-md-6 mb-4">
    <h3 class="mb-3">Interests</h3>

    {% if page.interests and page.interests.size > 0 %}
      {% for item in page.interests %}
        <div class="mb-4">
          <div>
            <div class="h6 mb-1">{{ item.title }}</div>
            {% if item.subtitle %}
              <div class="small text-muted">{{ item.subtitle }}</div>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    {% endif %}
  </div>

  <div class="col-12 col-md-6 mb-4">
    <h3 class="mb-3">Education</h3>

    {% if page.education and page.education.size > 0 %}
      {% for item in page.education %}
        <div class="d-flex align-items-start mb-4">
          <div class="flex-shrink-0 me-3" style="width: 2.25rem; line-height: 1;">
            {% if item.icon and item.icon contains 'fa-' %}
              <i class="{{ item.icon }}" aria-hidden="true"></i>
            {% else %}
              <span style="font-size: 1.5rem;">{{ item.icon }}</span>
            {% endif %}
          </div>
          <div class="flex-grow-1">
            <div class="h6 mb-1">{{ item.title }}</div>
            {% if item.subtitle %}
              <div class="small text-muted">{{ item.subtitle }}</div>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    {% endif %}
  </div>
</div>
